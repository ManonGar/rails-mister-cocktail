<div class="container">
  <div class ="top_page">
    <h1>Wonderful Cocktails</h1>
    <%= link_to "Create a new cocktail", new_cocktail_path, class: 'btn btn-primary'%>
  </div>

  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1536935338788-846bb9981813?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1286&q=80)">
          <%= cocktail.name%>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
