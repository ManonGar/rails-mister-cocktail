<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <h4>Wonderful Cocktails</h4>
    <%= link_to "Home", cocktails_path, class: "nav-link" %>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill if @cocktail.photo.attached? %>')">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
    <a class="btn btn-flat" href="#">Apply now</a>
  </div>
</div>

  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.ingredient.name %>
        <%= dose.description %>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="far fa-trash-alt"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>


<div class="container">
  <h3>Add an ingredient</h3>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
</div>
